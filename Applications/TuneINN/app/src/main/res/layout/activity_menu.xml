<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#1abc9c">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="top"
        android:layout_gravity="top|center">

        <ImageView
            android:layout_marginRight="450dp"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_chevron_left_black_24px" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_chevron_right_black_24px" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|bottom">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_skip_previous_black_24dp"/>


        <ImageView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_fast_rewind_black_24px"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_play_arrow_black_24dp"/>



        <ImageView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_stop_black_24px"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_fast_forward_black_24px"/>



        <ImageView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_skip_next_black_24dp"/>


    </LinearLayout>
</LinearLayout>
